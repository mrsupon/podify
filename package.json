{
    "name": "podify-express-mongo",
    "version": "1.2.0",
    "description": "Podify App",
    "main": "server.js",
    "type": "module",
    "scripts": {
        "prebuild": "rimraf ./dist",
        "build": "npm run prebuild && npm run compile && npm run copy-assets",
        "compile": "tsc",
        "copy-assets": "copyfiles --all --up 1 --exclude \"./**/*.{ts,tsx}\" \"./src/**/*\" ./dist",
        "dev": "nodemon dist/server.js",
        "start": "node dist/server.js",
        "test": "jest --coverage=false --verbose",
        "watch": "concurrently -k -p \"[{name}]\" -n \"TypeScript,Node\" -c \"cyan.bold,green.bold\" \"npm run watch-ts\" \"npm run watch-node\"",
        "watch-node": "nodemon dist/server.js",
        "build-ts": "tsc",
        "watch-ts": "tsc -w",
        "lint": "eslint src/*.ts",
        "lint-fix": "yarn lint --fix",
        "debug": "npm run compile && npm run watch-debug",
        "serve-debug": "nodemon --inspect dist/server.js",
        "watch-debug": "concurrently -k -p \"[{name}]\" -n \"TypeScript,Node\" -c \"cyan.bold,green.bold\" \"npm run watch-ts\" \"npm run serve-debug\"",
        "typecheck": "tsc --noEmit",
        "run-prettier": "prettier src/*.ts",
        "validate-prettiness": "yarn run-prettier -c",
        "make-prettier": "yarn run-prettier --write"
    },
    "author": "",
    "license": "ISC",
    "dependencies": {
        "@prisma/client": "^5.8.1",
        "bcrypt": "^5.1.1",
        "bson": "^6.3.0",
        "copyfiles": "^2.4.1",
        "cors": "^2.8.5",
        "crypto": "^1.0.1",
        "dotenv": "^16.4.1",
        "ejs": "^3.1.9",
        "express": "^4.18.2",
        "http-errors": "^1.7.1",
        "http-status": "^1.7.3",
        "lodash": "^4.17.21",
        "morgan": "^1.9.1",
        "nodemailer": "^6.9.8",
        "prisma": "^5.8.1",
        "rimraf": "^5.0.5",
        "type-fest": "^4.10.1",
        "yup": "^1.3.3"
    },
    "devDependencies": {
        "@types/bcrypt": "^5.0.2",
        "@types/cors": "^2.8.17",
        "@types/ejs": "^3.1.5",
        "@types/express": "^4.17.21",
        "@types/http-errors": "1.8.2",
        "@types/jest": "26.0.24",
        "@types/lodash": "^4.14.202",
        "@types/morgan": "1.9.7",
        "@types/node": "^20.11.5",
        "@types/nodemailer": "^6.4.14",
        "@types/supertest": "2.0.15",
        "@typescript-eslint/eslint-plugin": "4.33.0",
        "@typescript-eslint/parser": "4.33.0",
        "concurrently": "6.5.1",
        "eslint": "7.32.0",
        "eslint-config-prettier": "8.10.0",
        "eslint-plugin-import": "2.29.0",
        "jest": "26.6.3",
        "nodemon": "^3.0.3",
        "prettier": "2.8.8",
        "supertest": "6.3.3",
        "ts-jest": "26.5.6",
        "typescript": "4.9.5"
    }
}
